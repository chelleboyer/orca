# OOUX ORCA Project Builder Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="OOUX ORCA Project Builder"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection
DATABASE_URL="postgresql://ooux_user:ooux_password@localhost:5432/ooux_orca"
TEST_DATABASE_URL="postgresql://ooux_user:ooux_password@localhost:5432/ooux_orca_test"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis for session management and caching
REDIS_URL="redis://localhost:6379/0"

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# CRITICAL: Change this in production! Generate a secure random key
SECRET_KEY="your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32"

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM="HS256"

# Password Reset Settings
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# Rate Limiting for Authentication
LOGIN_RATE_LIMIT_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=1
PASSWORD_RESET_RATE_LIMIT_ATTEMPTS=3
PASSWORD_RESET_RATE_LIMIT_WINDOW_MINUTES=5

# Session Management
SESSION_EXPIRE_MINUTES=30
MAX_SESSIONS_PER_USER=5

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings (for production)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Email Settings
EMAILS_FROM_EMAIL="noreply@ooux-orca.com"
EMAILS_FROM_NAME="OOUX ORCA"

# Development Email Settings
USE_EMAIL_CONSOLE_BACKEND=true
EMAIL_TEST_USER=""

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# =============================================================================
# FILE HANDLING
# =============================================================================
UPLOAD_DIR="./uploads"
EXPORT_DIR="./exports"
MAX_UPLOAD_SIZE=10485760  # 10MB
EXPORT_CLEANUP_HOURS=24

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN="your-sentry-dsn-here"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
AUTH_RATE_LIMIT_ENABLED=true
REGISTRATION_RATE_LIMIT_PER_HOUR=10

# =============================================================================
# PRODUCTION SECURITY CHECKLIST
# =============================================================================
# Before deploying to production:
# 1. Generate a new SECRET_KEY: openssl rand -hex 32
# 2. Set DEBUG=false
# 3. Set ENVIRONMENT="production"
# 4. Configure proper SMTP settings
# 5. Set USE_EMAIL_CONSOLE_BACKEND=false
# 6. Update DATABASE_URL and REDIS_URL for production services
# 7. Configure proper CORS origins
# 8. Set up SSL certificates
# 9. Configure firewall rules
# 10. Set up monitoring with SENTRY_DSN
